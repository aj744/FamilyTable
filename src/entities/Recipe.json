{
  "name": "Recipe",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Recipe title"
    },
    "shortDescription": {
      "type": "string",
      "description": "Brief description of the recipe"
    },
    "fullInstructions": {
      "type": "string",
      "description": "Complete cooking instructions"
    },
    "ingredients": {
      "type": "array",
      "description": "List of ingredients",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          }
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Recipe categories and tags",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "difficultyLevel": {
      "type": "number",
      "description": "Difficulty from 1-5",
      "minimum": 1,
      "maximum": 5
    },
    "estimatedTime": {
      "type": "number",
      "description": "Estimated cooking time in minutes"
    },
    "mediaUrls": {
      "type": "array",
      "description": "Image and video URLs",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "servings": {
      "type": "number",
      "description": "Number of servings",
      "default": 4
    }
  },
  "required": [
    "title",
    "fullInstructions"
  ]
}